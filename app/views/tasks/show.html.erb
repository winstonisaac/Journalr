
<header class='nonLanding'>
  <span>❮</span>
  <img src="<%= image_path('logoIcon.svg')%>" id="logoIcon"><h2>&nbsp;| Task</h2>
</header>
<div id="categoriesShowProper">
  <div id="categoryDetails">
    <%= link_to tasks_path do%><span>❮</span><%end%>
    <%categoryID = @task.category_id%>
    <%category = Category.where(id: categoryID).pluck(:name)%>
    <h1 id="taskName"><%= @task.name %>&nbsp;&nbsp;<%= link_to edit_category_task_path(@task.category_id, @task) do%><img src="/svgs/editIcon.svg" id="editIcon"><%end%></h1><br>
    <%= link_to category_path(categoryID), data: { turbolinks: 'false'} do%><button id="categoryTag"><%=category[0]%></button><%end%><br><br>
    <p><%= @task.details%></p>
    <p id="dueOn">Due on <strong><%= @task.deadline%></strong>.</p>
  </div>
</div >
